# AWS Configuration
AWS_REGION=us-east-1
CDK_DEFAULT_ACCOUNT=your-account-id
CDK_DEFAULT_REGION=us-east-1

# Application Settings
NODE_ENV=development
LOG_LEVEL=INFO

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_REGION=us-east-1

# OpenAI Configuration for RAG Embeddings
OPENAI_API_KEY=your-openai-api-key

# AI Infrastructure Configuration
DOCUMENTS_BUCKET=ai-marketplace-documents-platform
EMBEDDINGS_TABLE=ai-marketplace-embeddings-platform
TENANTS_TABLE=ai-marketplace-tenants-platform
CONVERSATIONS_TABLE=ai-marketplace-conversations-platform

# Facebook Marketplace Configuration (Optional)
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=+1234567890

# Database Configuration
DYNAMODB_TABLE_PREFIX=ai-marketplace-assistant
CONVERSATION_TTL_DAYS=30

# Security Configuration
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Monitoring Configuration
ENABLE_XRAY_TRACING=true
ENABLE_DETAILED_MONITORING=true